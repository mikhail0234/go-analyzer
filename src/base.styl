wide_width = 1000px

grey_color = #b7b8b7
grey_color2 = #1D1F21
grey_color3 = #4f504d
grey_color4 = #232422
grey_color5 = #353634

*
  margin 0
  padding 0
  box-sizing border-box

body, html
  min-height 100%
  width 100%

body
  font-family "Avenir Next", Avenir, "Helvetica Neue", Helvetica, Arial, sans-serif
  color white
  background grey_color4
  font-size 14px

.Container
  width 100%

h2
  padding 20px 0
  text-align center
  width 100%

button
  padding 6px 8px
  color grey_color
  border none
  cursor pointer
  border-radius 4px
  background transparent
  font-size 12px
  font-weight 600
  outline none

  &:hover
    background grey_color3

  &:focus
    outline none

.InputAreaWrapper
  color grey_color
  border-radius 4px
  border 1px solid grey_color3

  .Top
    background grey_color5
    border-radius 4px 4px 0 0
    border 1px solid grey_color3
    border-bottom 0
    padding 12px 24px
    font-weight 600

  .Controls
    background grey_color5
    border-radius 0 0 4px 4px
    border 1px solid grey_color3
    padding 8px
    font-weight 600

.InputArea
  padding 20px 30px
  background grey_color2
  outline none
  border 1px solid grey_color3
  border-top none
  caret-color rgba(255, 255, 255, 0.6)
  color grey_color
  font-family 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace
  font-size 12px
  min-height 400px
  white-space pre-wrap

  &:focus
    outline none


@media (min-width: wide_width)
  .Container
    width wide_width
    padding 0 60px
    margin 0 auto

